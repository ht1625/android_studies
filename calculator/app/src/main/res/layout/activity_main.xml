<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="btn_add"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/show_text"
        android:layout_width="match_parent"
        android:layout_height="273dp"
        android:background="@color/bg"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="textEnd"
        android:textSize="30sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/ac"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@drawable/border_btn"
                android:onClick="btn_delete"
                android:text="AC"
                android:textSize="24sp" />

            <Button
                android:id="@+id/sign"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@drawable/border_btn"
                android:onClick="btn_add"
                android:text="+/-"
                android:textSize="24sp" />

            <Button
                android:id="@+id/percent"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@drawable/border_btn"
                android:onClick="btn_percentage"
                android:text="%"
                android:textSize="24sp"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/slash"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@drawable/border_btn"
                android:onClick="btn_process"
                android:text="/"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/seven"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@drawable/border_btn"
                android:onClick="btn_add"
                android:text="7"
                android:textSize="24sp" />

            <Button
                android:id="@+id/eight"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@drawable/border_btn"
                android:onClick="btn_add"
                android:text="8"
                android:textSize="24sp" />

            <Button
                android:id="@+id/none"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@drawable/border_btn"
                android:onClick="btn_add"
                android:text="9"
                android:textSize="24sp" />

            <Button
                android:id="@+id/x"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@drawable/border_btn"
                android:onClick="btn_process"
                android:text="x"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/four"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@drawable/border_btn"
                android:onClick="btn_add"
                android:text="4"
                android:textSize="24sp" />

            <Button
                android:id="@+id/five"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@drawable/border_btn"
                android:onClick="btn_add"
                android:text="5"
                android:textSize="24sp" />

            <Button
                android:id="@+id/six"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@drawable/border_btn"
                android:onClick="btn_add"
                android:text="6"
                android:textSize="24sp" />

            <Button
                android:id="@+id/minus"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@drawable/border_btn"
                android:onClick="btn_process"
                android:text="-"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/one"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@drawable/border_btn"
                android:onClick="btn_add"
                android:text="1"
                android:textSize="24sp" />

            <Button
                android:id="@+id/two"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@drawable/border_btn"
                android:onClick="btn_add"
                android:text="2"
                android:textSize="24sp" />

            <Button
                android:id="@+id/three"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@drawable/border_btn"
                android:onClick="btn_add"
                android:text="3"
                android:textSize="24sp" />

            <Button
                android:id="@+id/plus"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@drawable/border_btn"
                android:onClick="btn_process"
                android:text="+"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/point"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@drawable/border_btn"
                android:onClick="btn_add"
                android:text="."
                android:textSize="24sp" />

            <Button
                android:id="@+id/zero"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@drawable/border_btn"
                android:onClick="btn_add"
                android:text="0"
                android:textSize="24sp" />

            <Button
                android:id="@+id/comma"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@drawable/border_btn"
                android:onClick="btn_one_number"
                android:text="1/x"
                android:textSize="24sp" />

            <Button
                android:id="@+id/equal"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@drawable/border_btn"
                android:backgroundTint="@color/bg"
                android:onClick="equal_btn"
                android:text="="
                android:textColorHint="@color/bg"
                android:textSize="24sp" />
        </TableRow>

    </TableLayout>
</LinearLayout>